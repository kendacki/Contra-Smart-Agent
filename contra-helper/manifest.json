{
  "manifest_version": 3,
  "name": "Contra Smart Agent",
  "version": "3.0",
  "description": "Highlight a post on Contra and generate a custom reply.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://contra.com/*"],
      "js": ["content.js"]
    }
  ]
}